<h1>Welcome to MatrixMe</h1>
<%= flash[:message] %>
<%= form_for (@user) do |f| %>
    <%= f.label :name, 'Full name' %>
    <%= f.text_field :name %>
    <br />
    <%= f.label :email, 'E-mail address' %>
    <%= f.text_field :email %>
    <br />
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password %>
    <br />
    <%= f.submit 'Create' %>
<% end %>